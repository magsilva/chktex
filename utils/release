#!/bin/sh

PROJ=chktex
VERSION=$1
TAG=version-$VERSION
TAGFILE=svn+ssh://$USER@svn.savannah.nongnu.org/$PROJ/tags/$PROJ/$TAG

if [ -z "$VERSION" ]
then
	echo "No version given."
    echo "Remember to change the version in configure.in and update NEWS"
	exit 1
fi

if [ "$VERSION" = "snapshot" ]
then
	echo "Doing snapshot"
	VERSION=snapshot-`date +%Y.%m.%d`
	TAGFILE=file:///home/svn/$PROJ/trunk/$PROJ
fi

FILE=$PROJ-$VERSION.tar.gz
BASEDIR=$PROJ-$VERSION/

# Export clean copy of the repository
svn export $TAGFILE $BASEDIR
if [ $? != 0 ]
then
	echo "Error while checking out the version."
    echo "Did you forget to tag it?  Try"
    echo "svn cp svn+ssh://$USER@svn.savannah.nongnu.org/chktex/trunk/chktex  svn+ssh://$USER@svn.savannah.nongnu.org/chktex/tags/chktex/version-$VERSION -m 'Tag version $VERSION'"

	rm -rf $BASEDIR
	exit 1
fi

# Prepare version for release
if [ -f $BASEDIR/autogen.sh ]
then
	pushd $BASEDIR
	./autogen.sh
    rm -rf autom4te.cache/
    if [ "x$2" != "x" ]; then
        echo Adding $2 to the tarball
        cp "$2" .
    fi
	popd
elif [ -f $BASEDIR/Makefile ]
then
	pushd $BASEDIR
	make
	popd
fi

# Create tar.gz file
tar cvhzf $FILE $BASEDIR
rm -rf $BASEDIR

# Sign the tar.gz
echo "Now we GPG sign the release:"
gpg --detach --sign $FILE

echo "And upload to savannah"
scp $FILE $FILE.sig $USER@dl.sv.gnu.org:/releases/chktex
if [ $? != 0 ]
then
    echo "Uploading failed!"
    exit 1
fi

echo "Now update the website, and upload to CTAN"
